{
  "id": "com.apple.itunes",
  "version": "1.0.0",
  "compatibility": "0.x || 1.x",
  "category": "music",
  "name": {
    "en": "iTunes",
    "nl": "iTunes"
  },
  "description": {
    "en": "Give Homey the ability to control iTunes",
    "nl": "Laat Homey iTunes besturen"
  },
  "author": {
    "name": "Dennie de Groot",
    "email": "mail@denniedegroot.nl",
    "website": "https://denniedegroot.nl"
  },
  "contributors": {
    "developers": [
      {
        "name": "Maarten Jansen",
        "email": "m.jansen.email@gmail.com"
      }
    ]
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "permissions": [
    "homey:manager:speech-output"
  ],
  "dependencies": {
    "mdns-js": "*"
  },
  "media": [ "play", "pause", "search" ],
  "flow": {
    "actions": [
      {
        "id": "pause",
        "title": {
          "en": "Pause",
          "nl": "Pauzeren"
        }
      },
      {
        "id": "play",
        "title": {
          "en": "Play",
          "nl": "Afspelen"
        }
      },
      {
        "id": "playpause",
        "title": {
          "en": "Play/Pause",
          "nl": "Afspelen/Pauzeren"
        }
      },
      {
        "id": "previous",
        "title": {
          "en": "Previous",
          "nl": "Vorige"
        }
      },
      {
        "id": "next",
        "title": {
          "en": "Next",
          "nl": "Volgende"
        }
      },
      {
        "id": "volume",
        "title": {
            "en": "Volume",
            "nl": "Volume"
        },
        "args": [
          {
            "name": "volume_percent",
            "type": "range",
            "min": 0,
            "max": 100,
            "label": "%"
          }
        ]
      },
      {
        "id": "volume_down",
        "title": {
          "en": "Volume down",
          "nl": "Volume omlaag"
        },
        "args": [
          {
            "name": "volume_down",
            "type": "range",
            "min": 1,
            "max": 20,
            "label": "%"
          }
        ]
      },
      {
        "id": "volume_up",
        "title": {
          "en": "Volume up",
          "nl": "Volume omhoog"
        },
        "args": [
          {
            "name": "volume_up",
            "type": "range",
            "min": 1,
            "max": 20,
            "label": "%"
          }
        ]
      },
      {
        "id": "say_nowplaying",
        "title": {
          "en": "Say current song",
          "nl": "Zeg huidig nummer "
        }
      }
    ]
  }
}